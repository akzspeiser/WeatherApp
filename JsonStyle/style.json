{
    "QMainWindow": [{
        "title": "WeatherApp",
        "icon": ":/Images/speiserunlimited.png",
        "frameless": true,
        "translucentBg": true,
        "sizeGrip": "sizeGrip",
        "navigation": [{
            "minimize": "minimizeButton",
            "close": "closeButton",
            "restore": [{
                "buttonName": "restoreButton",
                "normalIcon": ":/icons/square.svg",
                "maximizedIcon": ":/icons/copy.svg"
            }],
            "moveWindow": "headerContainer",
            "titleBar": "headerContainer"
        }]
    }],
    "QCustomSlideMenu": [{
        "name": "leftMenuContainer",
        "defaultSize": [{
            "width": 45,
            "height": "parent"
        }],
        "collapsedSize": [{
            "width": 45,
            "height": "parent"
        }],
        "expandedSize": [{
            "width": 150,
            "height": "parent"
        }],
        "toggleButton": [{
            "buttonName": "menuButton",
            "icons": [{
                "whenMenuIsCollapsed": ":/icons/align-justify.svg",
                "whenMenuIsExpanded": ":/icons/chevron-left.svg"
            }]
        }],
        "menuTransitionAnimation": [{
            "animationDuration": 500,
            "animationEasingCurve": "Linear"
        }]
    },
    {
        "name": "centerMenuContainer",
        "defaultSize": [{
            "width": 0,
            "height": "parent"
        }],
        "collapsedSize": [{
            "width": 0,
            "height": "parent"
        }],
        "expandedSize": [{
            "width": 150,
            "height": "parent"
        }],
        "menuTransitionAnimation": [{
            "animationDuration": 500,
            "animationEasingCurve": "Linear"
        }]
    },
    {
        "name": "rightMenuContainer",
        "defaultSize": [{
            "width": 0,
            "height": "auto"
        }],
        "collapsedSize": [{
            "width": 0,
            "height": "auto"
        }],
        "expandedSize": [{
            "width": 200,
            "height": "auto"
        }],
        "menuTransitionAnimation": [{
            "animationDuration": 500,
            "animationEasingCurve": "Linear"
        }]
    },
    {
        "name": "popupNotificationContainer",
        "defaultSize": [{
            "width": 0,
            "height": "auto"
        }],
        "collapsedSize": [{
            "width": 0,
            "height": "auto"
        }],
        "expandedSize": [{
            "width": 500,
            "height": 100
        }],
        "menuTransitionAnimation": [{
            "animationDuration": 500,
            "animationEasingCurve": "Linear"
        }],
        "floatPosition": [{
            "relativeTo": "centralwidget",
            "position": "center-center",
            "shadow": [{
                "blurRadius": 20,
                "xOffset": 0,
                "yOffset": 0
            }]
        }],
        "toggleButton": [{
            "buttonName": "notificationButton"
        }]
    }],
    "QCustomQStackedWidget": [{
        "name": "mainPages",
        "navigation": [{
            "navigationButtons": [{
                "homeButton": "page_6",
                "dailyButton": "page_5",
                "weeklyButton": "page_7",
                "weatherMapButton": "page_8"
            }]
        }]
    },
    {
        "name": "centerMenuPages",
        "navigation": [{
            "navigationButtons": [{
                "settingsButton": "page",
                "helpButton": "page_2"
            }]
        }]
    },
    {
        "name": "rightMenuPages",
        "navigation": [{
            "navigationButtons": [{
                "moreMenuButton": "page_4",
                "profileMenuButton": "page_3"
            }]
        }]
    }
]
}
